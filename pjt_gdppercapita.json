{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "GDP per capita",
         "title": {
        "text": "GDP per capita",
        "subtitle":"Constant 2010 U.S. Dollars (Source:FRED)",
        "subtitleFontStyle":"italic",
        "subtitleFontSize":10,
        "anchor": "start",
        "color": "black"},
  
    "data": {"url": "https://raw.githubusercontent.com/MatthieuMichaux/MatthieuMichaux.github.io/main/FREDDATAGDP.csv"},
     
    "mark": "line",
    "encoding": {
      "x": {"field": "date", "type": "temporal", "title":"Date"},
      "y": {"field": "price", "type": "quantitative","title":"GDP per capita"},
      "color": {"field": "symbol", "type": "nominal","title": "Countries:"}
    ,
    "tooltip": [
        {"field": "date",
         "type": "temporal", 
         "title": "Date"},
        {
          "field": "price",
          "type": "quantitative",
          "title": "GDP/capita",
          "format": ",.0f"
        }
        
      ]
    }
  }
